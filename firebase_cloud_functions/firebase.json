{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "rewrites": [ {
      "source": "/restaurants/**/ratings",
      "function": "ratingsService"
    }, {
      "source": "/ratings/**",
      "function": "ratingsService"
    } ]
  },
  "emulators": {
    "functions": {
      "port": "3002"
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    }
  }
}
